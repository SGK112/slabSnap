# Remodely Backend Environment Variables
# Copy this to .env and fill in your values

# Server
PORT=3000
NODE_ENV=production
API_URL=https://remodely-backend.onrender.com

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/remodely

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# OpenAI API Key
OPENAI_API_KEY=sk-...

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=sk-ant-...

# ElevenLabs API Key (optional)
ELEVENLABS_API_KEY=...

# Shopify OAuth (create app at https://partners.shopify.com)
SHOPIFY_CLIENT_ID=your-shopify-client-id
SHOPIFY_CLIENT_SECRET=your-shopify-client-secret

# Stripe (from https://dashboard.stripe.com)
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...
APP_URL=remodelyai://

# Stripe Price IDs (create in Stripe Dashboard)
# Vendor Plans
STRIPE_VENDOR_STARTER_MONTHLY=price_...
STRIPE_VENDOR_STARTER_YEARLY=price_...
STRIPE_VENDOR_PRO_MONTHLY=price_...
STRIPE_VENDOR_PRO_YEARLY=price_...
STRIPE_VENDOR_ENTERPRISE_MONTHLY=price_...
STRIPE_VENDOR_ENTERPRISE_YEARLY=price_...

# Pro Plans (Contractors)
STRIPE_PRO_STARTER_MONTHLY=price_...
STRIPE_PRO_STARTER_YEARLY=price_...
STRIPE_PRO_BUSINESS_MONTHLY=price_...
STRIPE_PRO_BUSINESS_YEARLY=price_...
STRIPE_PRO_ENTERPRISE_MONTHLY=price_...
STRIPE_PRO_ENTERPRISE_YEARLY=price_...

# Credit Packages (one-time purchases)
STRIPE_CREDITS_10=price_...
STRIPE_CREDITS_25=price_...
STRIPE_CREDITS_50=price_...
STRIPE_CREDITS_100=price_...
