# Remodely Backend Environment Variables
# Copy this to .env and fill in your values

# Server
PORT=3000
NODE_ENV=production
API_URL=https://remodely-backend.onrender.com

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/remodely

# JWT Secret (generate a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this

# OpenAI API Key
OPENAI_API_KEY=sk-...

# Anthropic API Key (optional)
ANTHROPIC_API_KEY=sk-ant-...

# ElevenLabs API Key (optional)
ELEVENLABS_API_KEY=...

# Shopify OAuth (create app at https://partners.shopify.com)
SHOPIFY_CLIENT_ID=your-shopify-client-id
SHOPIFY_CLIENT_SECRET=your-shopify-client-secret
